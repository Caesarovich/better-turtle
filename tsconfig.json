{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
