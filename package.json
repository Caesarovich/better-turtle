  "devDependencies": {
    "@types/node": "^17.0.21",
    "canvas": "^2.9.1",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.7",
    "typedoc": "^0.22.12",
    "typescript": "4.5.5",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "types": "dist/index.d.ts"
